{
  "name": "woodpecker",
  "version": "1.0.0",
  "main": "server.js",
  "license": "MIT",
  "description": "This is the template project for a backend node JS application named as woodpecker",
  "scripts": {
    "dev": "tsnd --respawn --transpile-only ./src/server.ts",
    "test": "mocha -r ts-node/register src/**/*.spec.ts",
    "lint": "eslint src/**/*.ts",
    "lint-and-fix": "eslint . --ext .ts --fix",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "prettier-watch": "onchange 'src/**/*.ts' -- prettier --write {{changed}}"
  },
  "keywords": [
    "node js",
    "template node js app",
    "woodpecker"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "yarn run prettier-format && yarn run lint",
      "pre-push": ""
    }
  },
  "dependencies": {
    "@types/chai": "^4.2.13",
    "@types/chai-http": "^4.2.0",
    "@types/mocha": "^8.0.3",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "inversify": "^5.0.1",
    "joi": "^17.2.1",
    "mocha": "^8.1.3",
    "reflect-metadata": "^0.1.13",
    "ts-node-dev": "^1.0.0-pre.63"
  },
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@types/node": "^14.11.5",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "onchange": "^7.0.2",
    "prettier": "^2.1.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3",
    "winston": "^3.3.3"
  }
}
